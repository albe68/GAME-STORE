<section>
  <div class="container-fluid">
    <div class="row mt-4">
      <a style="width: 180px;height:60px" href="/admin/add-product" class="btn btn-success ml-right">ADD PRODUCTS</a>
    </div>


    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>Image</th>
          <th>Options</th>
        </tr>
      </thead>

      <tbody>
        {{#each products}}
        <tr>

          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width: 150px;height: 150px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Do you want to delete{{this.Name}}?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>


</section>


<script>

  $(document).ready(function () {
    $('#productsTable').DataTable();
  });

</script>